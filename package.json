{
  "name": "votive",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "app",
    "prompt-service",
    "worker"
  ],
  "scripts": {
    "build": "npm run build -w shared && npm run build -w backend && npm run build -w worker && npm run build -w prompt-service && npm run build -w app",
    "build:shared": "npm run build -w shared",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:run": "npm run test:run --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "verify:conventions": "./scripts/verify-conventions.sh",
    "verify:workspace": "./scripts/verify-workspace-setup.sh",
    "clear:packages": "find . -type d -name \"node_modules\" -prune -exec rm -rf {} + && find . -type f -name \"package-lock.json\" -delete",

    "db:migrate": "npm run db:migrate -w prompt-service",
    "db:generate": "npm run db:generate --workspaces --if-present",
    "db:seed": "npm run db:seed -w prompt-service",
    "db:studio": "npm run db:studio -w prompt-service"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
