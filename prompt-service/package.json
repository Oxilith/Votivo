{
  "name": "@votive/prompt-service",
  "private": true,
  "version": "1.1.0",
  "description": "Prompt management microservice for Votive with A/B testing support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup && vite build",
    "build:server": "tsup",
    "build:admin": "vite build",
    "build:analyze": "ANALYZE=true npm run build:admin",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy --config ./prisma.config.ts",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:test": "tsx prisma/seed.test.ts",
    "db:studio": "prisma studio",
    "lint": "eslint src/ __tests__/",
    "lint:fix": "eslint src/ __tests__/ --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest --project=unit",
    "test:unit:run": "vitest run --project=unit",
    "test:integration": "vitest --project=integration",
    "test:integration:run": "vitest run --project=integration",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@prisma/adapter-libsql": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/config": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "@votive/shared": "*"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
