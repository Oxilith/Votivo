{
  "name": "@votive/worker",
  "version": "1.0.0",
  "description": "Background worker microservice for Votive with scheduled job support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --passWithNoTests",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@libsql/client": "^0.8.0",
    "@prisma/adapter-libsql": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.4.0",
    "node-cron": "^3.0.3",
    "pino": "^9.0.0",
    "shared": "*"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.15.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
