# Server Configuration
BACKEND_PORT=3001
NODE_ENV=development

# HTTPS Configuration
BACKEND_HTTPS_ENABLED=true
HTTPS_KEY_PATH=../certs/localhost+2-key.pem
HTTPS_CERT_PATH=../certs/localhost+2.pem

# Anthropic API
ANTHROPIC_API_KEY=your_api_key_here

# CORS Configuration
CORS_ORIGIN=https://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Claude API Rate Limiting (stricter for expensive API calls)
CLAUDE_RATE_LIMIT_WINDOW_MS=60000
CLAUDE_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info

# Feature Flags
THINKING_ENABLED=true

# Prompt Service
PROMPT_SERVICE_URL=http://localhost:3002

# Circuit Breaker (timeout should be 2x request timeout of 5000ms)
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
