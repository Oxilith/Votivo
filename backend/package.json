{
  "name": "votive-backend",
  "version": "1.0.0",
  "description": "Backend API for Votive habit and identity formation app",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --passWithNoTests",
    "test:run": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "opossum": "^9.0.0",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "shared": "*"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^11.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.15.0"
  },
  "engines": {
    "node": ">=20.0.0"
}
}
