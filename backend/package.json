{
  "name": "@votive/backend",
  "private": true,
  "version": "1.1.0",
  "description": "Backend API for Votive habit and identity formation app",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "start": "node dist/index.js",
    "lint": "eslint src/ __tests__/",
    "lint:fix": "eslint src/ __tests__/ --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest --project=unit",
    "test:unit:run": "vitest run --project=unit",
    "test:integration": "vitest --project=integration",
    "test:integration:run": "vitest run --project=integration",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "opossum": "^9.0.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "@votive/shared": "*"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "msw": "^2.12.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
